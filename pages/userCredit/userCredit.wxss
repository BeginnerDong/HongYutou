/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
page{
	width:100%;
	min-height:100%;
}
.date{
	width:100%;
	height:90rpx;
	margin-bottom:20rpx;
	border-bottom:solid 20rpx #f6f6f6;
}
.date_left{
	width:50%;
}
.credit_list{
	padding:0 34rpx;
	height:130rpx;
	border-bottom:solid 1px #e0e0e0;
}
.credit_item{
	width:100%;
	height:130rpx;
	display:flex;
	align-items:center;
	justify-content:center;
}
.credit_reson{
	color:#444;
}
.credit_left{
	width:80%;
}
.credit_right{
	width:20%;
	text-align:right;
}
.credit{
	height:200rpx;
}
.credit_user{
	width:28%;
}
.credit_infor{
	width:40%;
}
.credit_number{
	width:32%;
}
.credit_cont{
	width:100%;
	height:160rpx;
}
.date_left text{
	margin:0 10rpx;
}
.add_img{
	width:88rpx;
	height:88rpx;
	border-radius:50%;
	position:fixed;
	bottom:150rpx;
	right:0;
}
.mask{
	width:80%;
	height:60%;
	background:#E5E5E5;
	position:fixed;
	top:10%;
	left:10%;
	z-index:999;
	overflow:hidden;
}
.credit_top{
	width:100%;	
	height:160rpx
}
.credit_top-img image{
	width:40rpx;	
	height:40rpx
}