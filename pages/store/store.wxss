page{
	min-height:100%;
	
}
.user-banner{
	height:200rpx;
	width:100%;
	border-radius:0 0 80rpx 80rpx;
	overflow:hidden;	
	background: #FF7F23;
	position: relative;
}
.user-card{
	position: absolute;
	height:250rpx;
	top:80rpx;
	width:90%;
	left:5%;
	background: #fff;
  border-radius: 8rpx;
	box-shadow:0 0 16rpx rgba(0,0,0,0.2);
}
.user-card-head{
	position: absolute;
	top:-60rpx;
	text-align: center;
	width:120rpx;
	height:120rpx;
	border-radius:50%;
	overflow:hidden
}
.openData-head{
	
	width:100%;
	height:100%;
	border-radius:50%
}
.user-card-head image{
	width:120rpx;
	height:120rpx
}
.user-card-title{
	margin-left: 20rpx;
}
.user-func{
	width:100%;
	margin-top: 170rpx;
	height:760rpx;
		box-shadow:0 -4rpx 8rpx rgba(0,0,0,0.05);
}
.user-func-item{
	width:32.8%;
	border: 1px solid #f4f4f4;
	height:250rpx;
	text-align: center;
}
.user-func-item image{
	width:70rpx;
	height:70rpx
}
.store-main{
	width:100%;
	margin-top: 20rpx;
}
.store-main-item{
	width:33%;
	text-align:center
}
.store-main-item view:last-child{
  padding-top:16rpx;
  font-size: 32rpx;
}