/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	
}
.tab{
	height:80rpx;
	border-bottom:solid 1px #f4f4f4;
}
.tab_item{
	width:25%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tab_this{
	color:#FF7F23;
	border-bottom:solid 2px #FF7F23;
}
.tab_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}
.product{
	border-bottom:solid 1px #f4f4f4;
}
.product_box{
	height:200rpx;
}
.product_detail{
	width:100%;
	height:180rpx;
}
.product_left{
	width:30%;
	height:180rpx;
}
.product_left image{
	width:180rpx;
	height:180rpx;
}
.product_right{
	width:70%;
	height:180rpx;
}
.order_handle{

	float:right;
	height:100rpx;
}
.product_price{
	text-align:right;
}
.test{
	height:100%;
	display:flex;
	flex-flow: row wrap;
	align-content:space-between;
}
.product_top{
	height:30%;
}
.submit_info{
	width:140rpx;
	height:50rpx;
	line-height:50rpx;
	margin:0;
	background:#fff;
	color:#666;
	border: 1px solid #f4f4f4;
	font-size:26rpx;
	margin-left: 20rpx;
	border-radius:10rpx
}
.order_tlt{
	height:78rpx;

}
.tlt_left{
	width:50%;
	overflow:hidden;
	font-size:26rpx;

}
.tlt_right{
	text-align:right;
}
.coupon{
	width:92%;
	margin: 25rpx auto;
	height:220rpx;
	position: relative;
}
.coupon image{
	width:100%;
	height:100%;
	
}

.coupon-left{
	height: 100%;
	width:64%;
	position:absolute;
	top: 0rpx;
	left: 0rpx;
	text-align: center;
	display: inline-block;
}
.coupon-right{
	height: 100%;
	width:28%;
	position:absolute;
	top: 0rpx;
	right: 2%;
	text-align: center;
	display: inline-block;
	color: #fff;
}
.coupon-right button{
	font-size: 24rpx;
	background: #fff;
	border-radius: 40rpx;
	width: 82%;
	height: 46rpx;
	line-height: 46rpx;
	margin-top: 16rpx;
}
.btn1{
	color: #E84D39;
}
.btn2{
	color: #EF3857;
}.btn3{
	color: #DF498B;
}

.coupon-text{
	position: absolute;
	border: solid 4rpx;
	width: 38%;
	height: 70rpx;
	font-size: 38rpx;
	text-align: center;
	line-height: 70rpx;
	transform: rotate(-20deg);
	top: 70rpx;
	left: 32%;
}