/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
.tab{
	height:80rpx; 
	background:#fff;
}
page{
	min-height:100%;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
swiper{
	height:360rpx
}
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.outLineStory{
	width:92%;
	height:560rpx;
	padding: 0 4%;
	
}
.outLineStory-infomation{
	width:100%;
	height:120rpx;
	background: rgba(0,0,0,0.4);
	position: absolute;
	bottom:0;
  padding:10rpx 20rpx;
  box-sizing: border-box;
}
.outLineStory-infomation-item{
	width:100%;
	height:50%;
	line-height: 100%;
  box-sizing:border-box;
}
.title-left{
	justify-content: flex-start;
	width:50%
}
.title-left image{
	width:30rpx;
	height:30rpx
}
.title-right image{
	width:30rpx;
	height:15rpx
}
.title-right{
	justify-content: flex-end;
	width:50%
}

.outLineStory-title{
	height:110rpx;
	width:100%
}
.outLineStory-mainImg{
	height:400rpx;
	border-radius:10rpx;
	position:relative
}
.outLineStory-mainImg image{
	height:100%;
	width:100%	
}
.group{

	width:92%;
	padding: 0 4%;
}
.group-main{
	width:100%;
	height:260rpx;
	margin-bottom: 40rpx;
}
.group-main-left{
	width:260rpx;
	height:260rpx;
  float: left;
}
.group-main-left image{
	width:100%;
	height:100%;
  display: block;
}
.group-main-right{ 
  width: 420rpx;
  height: 260rpx;
  padding-left:26rpx;
  float: left;
  box-sizing: border-box;
}

.product-item{
	width:48%;
	height:470rpx;
}
.product-item-img{
	height:330rpx;
	overflow: hidden;
}
.product{
	width:92%;
	padding: 0 4%;
}
.product-item-img image{
	height:100%;
	width:100%;
}
.product-item-text{
	height:140rpx;
	box-shadow:0px 0px 10px -4px #969696,0px 0px 0px -4px #969696;
	padding:10rpx 20rpx;
  box-sizing:border-box;
}
.loadMore{
	width:100%;
	text-align: center;
	margin-top: 50rpx;
}
.loadMore-img{
	width:100%;
	display: flex;

	justify-content: center;
}
.loadMore-img image{
	width:20rpx;
	height:20rpx;
	display: block;
	
}


