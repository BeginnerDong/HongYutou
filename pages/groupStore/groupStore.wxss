/* groupStore.wxss */
.form-item{
	width:92%;
	height:90rpx;
	line-height: 90rpx;
	border-bottom: 1px solid #f4f4f4;
	padding: 0 4%;
}
.form-item-title{
	 width:25%
 }


 .shop_adr_lis{
   width: 94%; 
   margin: 0 auto;
   padding:20rpx 0;
   border-bottom: 1px solid #f4f4f4;
   padding-left: 50rpx;
   box-sizing:border-box;
   position: relative;
 }
  .shop_adr_lis .selBtn{
    position: absolute;
    left: 0rpx;
    top: 50%;
    transform: translateY(-50%);
 }
 .leftCont{
   width: 80%;
   left: left;
   border-right: 1px solid #FF7F23;
   padding-right:10rpx;
   box-sizing:border-box;
 }
 .shop_name{ 
   font-size:28rpx; 
   padding-bottom: 10rpx;
  }
  .leftCont .address{
    color: #666;
    line-height: 40rpx;
    font-size: 24rpx;
  }
 .rightIcon{
   width: 20%;
   justify-content: flex-end;
 }
 .mask{
  	width:100%;
  	height:100%;
  	background:rgba(0,0,0,0.5);
  	position:fixed;
  	overflow: hidden;
  	left:0;
  	top:0;
  }
  .confirm{
  	width:70%;
  	height:336rpx;
  	border-radius:20rpx;
  	position:absolute;
  	left:15%;
  	top:30%;
  }
  .confirm_tlt{
  	width:100%;
  	height:120rpx;
  	line-height:120rpx;
  	font-size:28rpx;
  	color:#222;
  	text-align:center;
  }
  .confirm_notice{
  	height:120rpx;
  	text-align:center;
 	padding: 0 20rpx;
  }
  .confirm_btn{
  	width:100%;
  	height:96rpx;
  	border-top:solid 1px #e0e0e0;
  }
  .confirm_item{
  	width:50%;
  	height:96rpx;
  	line-height:96rpx;
  	text-align:center;
  }
  .img{
  	position:absolute;
  	left:0;
  	width:100%;
  
  	text-align:center;
  	height:100%;
  
  	
  }
  .img image{
  	width: 300px;
  	height: 425px;
  }
