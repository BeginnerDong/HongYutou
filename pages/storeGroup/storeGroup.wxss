/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	
}
.tab{
	height:80rpx;
	border-bottom:solid 1px #f4f4f4;
}
.tab_item{
	width:50%;
	text-align:center;
	height:80rpx;
	line-height:80rpx;
}
.tab_this{
	color:#FF7F23;
	border-bottom:solid 2px #FF7F23;
}
.tab_item text{
	height:78rpx;
	line-height:78rpx;
	display:inline-block;
}
.product{
	border-bottom:solid 1px #f4f4f4;
}
.product_box{
	height:200rpx;
}
.product_detail{
	width:100%;
	height:180rpx;
}
.product_left{
	width:26%;
	height:180rpx;
}
.product_left image{
	width:100%;
	height:100%;
}
.product_right{
	width:70%;
	height:180rpx;
}
.order_handle{

	float:right;
	height:100rpx;
}
.product_price{
	text-align:right;
}
.test{
	height:100%;
	display:flex;
	flex-flow: row wrap;
	align-content:space-between;
}
.product_top{
	height:40%;
}
.submit_info{
	width:140rpx;
	height:50rpx;
	line-height:50rpx;
	margin:0;
	background:#fff;
	border:1px solid rgba(45,15,6,0.6);
	color: rgba(45,15,6,0.6);
	border-radius:10rpx;
	font-size:26rpx
}
.order_tlt{
	height:78rpx;

}
.tlt_left{
	width:50%;
	overflow:hidden;
	font-size:26rpx;
	color:#666;
}
.tlt_right{
	text-align:right;
}
.group-main{
	width:100%;
	height:220rpx;
	margin: 40rpx auto;
}
.group-main-left{
	width:50%;
	height:100%;
}
.group-main-left image{
	width:90%;
	height:100%;
}
.group{

	width:92%;
	padding: 0 4%;
}